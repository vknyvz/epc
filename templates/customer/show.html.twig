{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Uuid</th>
                <td>{{ customer.uuid }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ customer.first_name }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ customer.last_name }}</td>
            </tr>
            <tr>
                <th>DateOfBirth</th>
                <td>{{ customer.date_of_birth ? customer.date_of_birth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ customer.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ customer.created_at ? customer.created_at|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ customer.updated_at ? customer.updated_at|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('customer_index') }}">back to list</a>

    <a href="{{ path('customer_edit', {'uuid': customer.uuid}) }}">edit</a>

    {{ include('customer/_delete_form.html.twig') }}
{% endblock %}
